<%= path_links %><br /><br />
<h1>Create a New Gallery<hr /></h1>
<% form_for :gallery, :url => {:return_to => @return_to, :action => 'create'} do |f| %>
  <%= error_messages_for :gallery %>
  <label>Name:</label> <%= f.text_field :name %>
  <label>Parent Gallery:</label> <%= f.select :parent_id, PhotoGallery::Gallery.collection_for_select %>
  <br />
  <br />
  <%= submit_tag "Create Gallery" %>
<% end %>
