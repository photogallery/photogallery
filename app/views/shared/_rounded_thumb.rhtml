<% with_delete ||= false %>
<% text ||= object.caption %>
<% gallery ||= false %>

<div class="rounded_thumb_container">
  <b class="rounded_thumb">
    <b class="rounded_thumb1"><b></b></b>
    <b class="rounded_thumb2"><b></b></b>
    <b class="rounded_thumb3"></b>
    <b class="rounded_thumb4"></b>
    <b class="rounded_thumb5"></b></b>

  <div class="rounded_thumbfg">
    <% if with_delete && @admin %>
      <div class="hover_top_left" alt="delete">
        <%= link_to image_tag('photo_gallery/delete2.png'), path.merge({:action => :destroy}), :confirm => "Are you sure you want to delete this?" %>
      </div>
    <% end %>

    <% if gallery %>
      <%= link_to image_tag(image_url(rounded_thumb), :class => "ImageFrame_image"), path %>
      <%= image_tag 'photo_gallery/album.gif' %>
    <% else %>

      <%= link_to image_tag(image_url(rounded_thumb), :class => "ImageFrame_image"), image_url(rounded_thumb, :size => :large ), :rel => 'lightbox[gallery]', :title => text %>
    <% end %>
    <%= h(truncate(text, 45)) %>
  </div>

  <b class="rounded_thumb">
    <!--
    -->
    <b class="rounded_thumb5"></b>
    <b class="rounded_thumb4"></b>
    <b class="rounded_thumb3"></b>
    <b class="rounded_thumb2"><b></b></b>
    <b class="rounded_thumb1"><b></b></b></b>
</div>
